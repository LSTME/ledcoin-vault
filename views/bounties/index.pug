extends ../layout

block content
  .container
    table.table.is-fullwidth
      thead
        tr
          th ID
          th Description
          th Value
          th Code
      tbody
        each bounty in bounties
          tr
            td= bounty.$loki
            td= bounty.description
            td= bounty.value
            td= bounty.code

    a.button.is-success(href="/bounties/new") New
